sub clamp {
    my ($x, $y, $z) = @_;
    return if !defined $x;
    my ($min, $max);
    if (!defined $y && !defined $z) {
        $min = 0;
        $max = 1;
    } elsif (defined $y && defined $z) {
        $min = $y;
        $max = $z;
    } elsif (defined $y) {
        $min = 0;
        $max = $y;
    } elsif (defined $x) {
        $min = 0;
        $max = $x;
    }
    if ($min > $max) {
        ($min, $max) = ($max, $min);
    }
    return $x < $min ? $min : $x > $max ? $max : $x;
}
