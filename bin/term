#!/usr/bin/env perl
use warnings;
use strict;
use Data::Dumper qw(Dumper);
use POSIX qw(round);

my $RX_NUMBER = qr{(?:
                       -?
                       (?:\d+(?:\.)?|\d*\.\d+)
                   )}x;

my $RX_SEPAR = qr{(?:
                      \s*[,/]\s*
                  |
                      \s+
                  )}x;

my $RX_RGB = qr{^rgba?\s*\(\s*
                (?:(?<r>$RX_NUMBER)(?<r_pct>%)?|(?<r_none>none))
                $RX_SEPAR
                (?:(?<g>$RX_NUMBER)(?<g_pct>%)?|(?<g_none>none))
                $RX_SEPAR
                (?:(?<b>$RX_NUMBER)(?<b_pct>%)?|(?<b_none>none))
                (?:
                    $RX_SEPAR
                    (?:(?<a>$RX_NUMBER)(?<a_pct>%)?|(?<a_none>none))
                )?
                \s*\)$}xi;

STDOUT->autoflush(1);

our $MY_NAME = "term";
our %COLORS;
our %COMMANDS;

if (!scalar @ARGV) {
    printf STDERR ("not enough parameters; type \"%s\" help\" for help.\n", $MY_NAME);
    exit(1);
}

$Data::Dumper::Useqq = 1;
$Data::Dumper::Terse = 1;
$Data::Dumper::Indent = 0;

while (scalar @ARGV) {
    my $cmd = shift(@ARGV);
    if ($cmd eq "help") {
        help();
        exit(0);
    }
    if (exists $COMMANDS{$cmd}) {
        my ($format, @param_names) = @{$COMMANDS{$cmd}};
        if (ref $format eq "") {
            my @params;
            foreach my $param_name (@param_names) { # "color", ...
                if (!scalar @ARGV) {
                    printf STDERR ("%s %s: not enough parameters\n", $MY_NAME, $cmd);
                    exit(1);
                }
                my $param_value = shift(@ARGV);
                if ($param_name eq "color") {
                    my $color = color($param_value);
                    if (!defined $color) {
                        printf STDERR ("%s %s %s: invalid color\n", $MY_NAME, $cmd, $param_value);
                        exit(1);
                    }
                    push(@params, color($param_value));
                }
            }
            my $str = $format;
            if (scalar @params) {
                $str = sprintf($format, @params);
            }
            print($str);
            next;
        }
    }
}

sub color {
    my $color = shift;
    if ($color =~ /^\#?([[:xdigit:]]{2})([[:xdigit:]]{2})([[:xdigit:]]{2})$/) {
        return "#$1$2$3";
    }
    if ($color =~ /^\#?([[:xdigit:]])([[:xdigit:]])([[:xdigit:]])$/) {
        return "#$1$1$2$2$3$3";
    }
    if ($color =~ $RX_RGB) {
        my     ($r, $g, $b, $a, $r_pct, $g_pct, $b_pct, $a_pct, $r_none, $g_none, $b_none, $a_none) =
          @+{qw( r   g   b   a   r_pct   g_pct   b_pct   a_pct   r_none   g_none   b_none   a_none)};
        my $r_comp = defined $r_none ? 0 : defined $r ? (defined $r_pct ? $r / 100 * 255 : $r) : undef;
        my $g_comp = defined $g_none ? 0 : defined $g ? (defined $g_pct ? $g / 100 * 255 : $g) : undef;
        my $b_comp = defined $b_none ? 0 : defined $b ? (defined $b_pct ? $b / 100 * 255 : $b) : undef;
        my $a_comp = defined $a_none ? 0 : defined $a ? (defined $a_pct ? $a / 100 * 255 : $a * 255) : undef;
        $r_comp = round(clamp($r_comp, 0, 255));
        $g_comp = round(clamp($g_comp, 0, 255));
        $b_comp = round(clamp($b_comp, 0, 255));
        $a_comp = round(clamp($a_comp, 0, 255)) if defined $a_comp;
        if (defined $a_comp) {
            return sprintf("#%02x%02x%02x%02x", $r_comp, $g_comp, $b_comp, $a_comp);
        }
        return sprintf("#%02x%02x%02x", $r_comp, $g_comp, $b_comp);
    }

    # color names only
    $color = lc $color;
    $color =~ s{grey}{gray}g;
    $color =~ s{[- ]+}{}g;
    if (exists $COLORS{$color}) {
        return $COLORS{$color};
    }
    return;
}

sub help { print(<<"END"); }
term COMMAND ...
    help
    bg COLOR
    fg COLOR
    reset
END

